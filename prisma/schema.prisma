generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // Certifique-se de que a variável de ambiente DATABASE_URL está configurada corretamente
}

enum TransactionType {
  expense
  income
}

model Category {
  id        String          @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  color     String
  type      TransactionType
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  transactions Transaction[]

  @@unique([name, type])
  @@map("category") // Nome da coleção no MongoDB
}

model Transaction {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  description String
  amount      Float
  date        DateTime
  type        TransactionType
  userId      String
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?   @db.ObjectId

  @@index([userId, date])
  @@index([userId, date, categoryId])
}
