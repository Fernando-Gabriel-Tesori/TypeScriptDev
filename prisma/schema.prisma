generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum TransactionType {
  expense
  income
}

model category {
  id        String          @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  color     String
  type      TransactionType
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

model transaction {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  description String
  amount      Float
  date        DateTime
  type        TransactionType
  userId      String
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}
